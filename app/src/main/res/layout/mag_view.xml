<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

        <Button
            android:id="@+id/buttonSophia"
            android:text="Mon magasin"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:layout_height="140dp" />

        <Button
            android:id="@+id/buttonMag2"
            android:text="Autre Mag 2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_centerInParent="true"
            android:layout_below="@id/buttonSophia"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:layout_height="140dp" />

        <Button
            android:id="@+id/buttonMag1"
            android:text="Autre Mag 1"
            android:layout_below="@id/buttonSophia"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/buttonMag2"
            android:layout_width="200dp"
            android:layout_height="140dp" />

        <Button
            android:id="@+id/buttonMag3"
            android:text="Autre Mag 3"
            android:layout_below="@id/buttonSophia"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/buttonMag2"
            android:layout_width="200dp"
            android:layout_height="140dp"/>

</RelativeLayout>